<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="@string/tile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/name_edittext_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/tile_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_previous"
                android:id="@+id/fast_back_button_tile_x_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_rew"
                android:id="@+id/back_button_tile_x_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:id="@+id/tile_x_edittext_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_ff"
                android:id="@+id/forward_button_tile_x_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_next"
                android:id="@+id/fast_forward_button_tile_x_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/tile_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_previous"
                android:id="@+id/fast_back_button_tile_y_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_rew"
                android:id="@+id/back_button_tile_y_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/tile_y_edittext_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_ff"
                android:id="@+id/forward_button_tile_y_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_next"
                android:id="@+id/fast_forward_button_tile_y_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/tile_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_previous"
                android:id="@+id/fast_back_button_tile_width_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_rew"
                android:id="@+id/back_button_tile_width_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/tile_width_edittext_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_ff"
                android:id="@+id/forward_button_tile_width_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_next"
                android:id="@+id/fast_forward_button_tile_width_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/tile_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_previous"
                android:id="@+id/fast_back_button_tile_height_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_rew"
                android:id="@+id/back_button_tile_height_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/tile_height_edittext_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_ff"
                android:id="@+id/forward_button_tile_height_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_next"
                android:id="@+id/fast_forward_button_tile_height_location_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>